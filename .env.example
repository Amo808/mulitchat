# AI Chat Environment Variables
# Copy this to .env and fill in your API keys

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# ChatGPT Pro API Key (same as OpenAI but for Pro features)
CHATGPT_PRO_API_KEY=your_chatgpt_pro_api_key_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Groq API Key
GROQ_API_KEY=your_groq_api_key_here

# Optional: Mistral API Key  
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: Ollama API Key (usually not needed for local)
OLLAMA_API_KEY=

# Application Configuration
NODE_ENV=production
PORT=8000
FRONTEND_PORT=3000

# Database Configuration (optional)
DATABASE_URL=sqlite:///./data/conversations.db

# Logging Level
LOG_LEVEL=INFO
