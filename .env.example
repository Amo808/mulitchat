# Environment Variables for AI Chat Application

# OpenAI API Key - for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# ChatGPT Pro API Key - for premium OpenAI models (usually same as OPENAI_API_KEY)
CHATGPT_PRO_API_KEY=your_chatgpt_pro_api_key_here

# Google Gemini API Key - for Gemini models
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API Key - for DeepSeek models  
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Anthropic API Key - for Claude models (if using)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database URL (optional - for PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Application Settings
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (for development)
FRONTEND_URL=http://localhost:3000

# Render Deployment Settings (automatically set by Render)
# PORT=10000
# RENDER=true
